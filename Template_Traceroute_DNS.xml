<zabbix_export>
    <version>5.0</version>
    <date>2022-01-18T14:47:40Z</date>
    <groups>
        <group>
            <name>Templates RR</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>RR Traceroute MTR DNS</template>
            <name>RR Traceroute MTR DNS</name>
            <description>By Rudimar Remontti&#13;
Tutorial:&#13;
# apt install mtr-tiny&#13;
# cd /usr/lib/zabbix/externalscripts&#13;
# echo '#!/bin/bash' &gt; zbx_mtr&#13;
# echo 'IP=$1' &gt;&gt; zbx_mtr&#13;
# echo 'mtr -r -c5 -w -b -p -j $IP | sed -e &quot;s/???/* * */g&quot;' &gt;&gt; zbx_mtr&#13;
# chown zabbix. zbx_mtr  &#13;
# chmod +x zbx_mtr&#13;
&#13;
Ajuda&#13;
https://www.zabbix.com/documentation/4.2/en/manual/appendix/items/jsonpath</description>
            <groups>
                <group>
                    <name>Templates RR</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Descoberta</name>
                </application>
                <application>
                    <name>Hostname</name>
                </application>
                <application>
                    <name>Latência média (RTT)</name>
                </application>
                <application>
                    <name>Perda%</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Total de saltos</name>
                    <type>DEPENDENT</type>
                    <key>mtr.saltos.total</key>
                    <delay>0</delay>
                    <history>1d</history>
                    <trends>180d</trends>
                    <applications>
                        <application>
                            <name>Descoberta</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.report.hubs.length()</params>
                        </step>
                    </preprocessing>
                    <master_item>
                        <key>zbx_mtr[{HOST.IP}]</key>
                    </master_item>
                    <triggers>
                        <trigger>
                            <expression>{diff(0)}&gt;0</expression>
                            <name>Número de saltos alterado</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Tracerouter MTR Descoberta</name>
                    <type>EXTERNAL</type>
                    <key>zbx_mtr[{HOST.IP}]</key>
                    <delay>10m</delay>
                    <history>1d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <applications>
                        <application>
                            <name>Descoberta</name>
                        </application>
                    </applications>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Descoberta saltos</name>
                    <type>DEPENDENT</type>
                    <key>mtr.descoberta.saltos</key>
                    <delay>0</delay>
                    <lifetime>0</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Salto {#SALTO_ID}: {#SALTO_HOST}</name>
                            <type>DEPENDENT</type>
                            <key>mtr.host[{#SALTO_ID}]</key>
                            <delay>0</delay>
                            <history>7d</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>Hostname</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.report.hubs.[?(@.count == &quot;{#SALTO_ID}&quot;)].Name.first()</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zbx_mtr[{HOST.IP}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Salto {#SALTO_ID}: {#SALTO_HOST} - Latência média RTT (ms)</name>
                            <type>DEPENDENT</type>
                            <key>mtr.lat.med[{#SALTO_ID}]</key>
                            <delay>0</delay>
                            <history>14d</history>
                            <trends>180d</trends>
                            <value_type>FLOAT</value_type>
                            <units>!ms</units>
                            <applications>
                                <application>
                                    <name>Latência média (RTT)</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.report.hubs.[?(@.count == &quot;{#SALTO_ID}&quot;)][&quot;Avg&quot;].first()</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zbx_mtr[{HOST.IP}]</key>
                            </master_item>
                        </item_prototype>
                        <item_prototype>
                            <name>Salto {#SALTO_ID}: {#SALTO_HOST} - ICMP Perda%</name>
                            <type>DEPENDENT</type>
                            <key>mtr.loss[{#SALTO_ID}]</key>
                            <delay>0</delay>
                            <history>14d</history>
                            <trends>180d</trends>
                            <value_type>FLOAT</value_type>
                            <units>%</units>
                            <applications>
                                <application>
                                    <name>Perda%</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.report.hubs.[?(@.count == &quot;{#SALTO_ID}&quot;)][&quot;Loss%&quot;].first()</params>
                                </step>
                            </preprocessing>
                            <master_item>
                                <key>zbx_mtr[{HOST.IP}]</key>
                            </master_item>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>Salto {#SALTO_ID}: {#SALTO_HOST}</name>
                            <graph_items>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <drawtype>BOLD_LINE</drawtype>
                                    <color>F63100</color>
                                    <item>
                                        <host>RR Traceroute MTR DNS</host>
                                        <key>mtr.loss[{#SALTO_ID}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>2</sortorder>
                                    <drawtype>GRADIENT_LINE</drawtype>
                                    <color>80FF00</color>
                                    <yaxisside>RIGHT</yaxisside>
                                    <item>
                                        <host>RR Traceroute MTR DNS</host>
                                        <key>mtr.lat.med[{#SALTO_ID}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                    <master_item>
                        <key>zbx_mtr[{HOST.IP}]</key>
                    </master_item>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#SALTO_HOST}</lld_macro>
                            <path>$.['host']</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#SALTO_ID}</lld_macro>
                            <path>$.['count']</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.report.hubs</params>
                        </step>
                    </preprocessing>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
    <graphs>
        <graph>
            <name>Total de saltos</name>
            <graph_items>
                <graph_item>
                    <sortorder>1</sortorder>
                    <drawtype>BOLD_LINE</drawtype>
                    <color>FF8000</color>
                    <item>
                        <host>RR Traceroute MTR DNS</host>
                        <key>mtr.saltos.total</key>
                    </item>
                </graph_item>
            </graph_items>
        </graph>
    </graphs>
</zabbix_export>